<div class="container"> 
  <h1>Category for memes</h1>
  <%= form_for @resource do |form| %>
    <%= render "devise/shared/error_messages", resource: @resource %>
    <div class="form-group">
      <%= form.label :title %>
      <%= form.text_field :title, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :body %>
      <%= form.text_area :body, class: "form-control w-100", rows: 15 %>
    </div>
    <%= form.hidden_field :user_id, value: "#{current_user.id}"%>
    <%= form.submit 'MEME', class: "btn btn-primary"%>
    <%= link_to "Back", :back%>
  <% end %>
</div>