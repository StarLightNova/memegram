<div class="col-md-12 mt-3 pt-2 pb-2 d-flex justify-content-center align-items-center flex-column">
  <div class="col-md-12">
    <div class="col-md-12 d-flex border rounded align-items-center flex-column p-3 shadow">
      <div class="col-md-12">
        <div class="text-break"><h3><%= resource.category_name %></h3></div>
      </div>
      <% if !resource.category_description.nil? %>
        <div class="col-md-12">
          <div class="text-break"><p><%= resource.category_description %> </p></div>
        </div>
      <% end %>
      <div class="col-md-12 d-flex justify-content-between align-items-center">
        <div class="text-break text-left"><p style="font-size: 9px;"><%=resource.created_at%></p></div>
        <div class="text-break text-right"><%= link_to "Found: #{resource.posts.size}", category_path(resource)%></div>
        <%# <div class="text-break text-right"><%= link_to 'More', post_path(resource)</div> %>
      </div>
    </div>
  </div>
</div>